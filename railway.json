{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "install": {
          "cmds": [
            "python -m venv /app/.venv",
            ". /app/.venv/bin/activate && pip install -r requirements.txt"
          ]
        }
      },
      "start": {
        "cmd": ". /app/.venv/bin/activate && uvicorn api.main:app --host 0.0.0.0 --port ${PORT:-8000}"
      }
    }
  }
}
